# Peace Offering Agent - Environment Configuration
# Copy this to .env and configure with your API keys and settings

# AI/Agent Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# External Service APIs (for production)
AMAZON_API_KEY=your_amazon_api_key_here
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here
OPENTABLE_API_KEY=your_opentable_api_key_here

# App Configuration
DEBUG=True
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# Database (for future user/relationship storage)
DATABASE_URL=sqlite:///peace_offering_agent.db

# External Services
FLOWER_DELIVERY_SERVICE=1-800-flowers
GIFT_SERVICE=amazon

# Convex (optional) â€” used for logging requests/responses if configured
CONVEX_URL=https://your-deployment-name.convex.cloud
# Use one of the following auth methods (admin key preferred in server environments)
CONVEX_ADMIN_KEY=your_convex_admin_key_here
# or provide a user token instead
CONVEX_TOKEN=your_convex_user_token_here

# Hackathon Mode - Uses simulated responses for demo
HACKATHON_MODE=True